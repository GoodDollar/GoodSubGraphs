{
  "compilerOptions": {
    "target": "es5",
    "module": "nodenext",
    "moduleResolution":"nodenext",
    "lib": ["es2020"],
    "declaration": true,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
